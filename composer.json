{
    "name": "artisansdk/bench",
    "description": "A set of testing and package development tools for the developer work bench.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel LaBarge",
            "email": "daniel@artisanscollaborative.com"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.0",
        "friendsofphp/php-cs-fixer": "~2.10",
        "illuminate/console": "~5.0",
        "illuminate/support": "~5.0",
        "pdepend/pdepend": "~2.5.0",
        "phploc/phploc": "~4.0.0",
        "phpmd/phpmd": "~2.6.0",
        "phpunit/phpunit": "~7.5",
        "sebastian/phpcpd": "~4.0.0",
        "symfony/console": "^4.2",
        "symfony/event-dispatcher": "^4.2",
        "symfony/stopwatch": "^4.2"
    },
    "require-dev": {
        "laravel-zero/framework": "~5.5"
    },
    "autoload": {
        "psr-4": {
            "ArtisanSdk\\Bench\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArtisanSdk\\Bench\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/bench",
    ],
    "scripts": {
        "fix": [
            "@php bin/bench fix bin/ src/ tests/ --cache=.php_cs.cache --ansi"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always --order-by=defects --stop-on-defect --no-coverage",
            "vendor/bin/php-cs-fixer fix -v --diff --dry-run"
        ],
        "watch": [
            "watchman-make -p 'src/**/*.php' 'tests/**/*.php' --run=\"clear && printf '\\e[3J' && vendor/bin/phpunit --colors=always --order-by=defects --stop-on-defect --no-coverage\""
        ],
        "report": [
            "[ -d reports ] || mkdir reports",
            "vendor/bin/phpunit --order-by=defects --stop-on-defect --colors=always",
            "coverage=`cat reports/coverage.txt | grep -m 1 \"Lines:\" | grep -E -o \"([0-9]{1,3})\" | head -1`; min=80; if [ $coverage -lt $min ]; then exit 2; fi",
            "vendor/bin/php-cs-fixer fix -v --diff --dry-run",
            "vendor/bin/phpmd \"src/\" html codesize,cleancode,unusedcode,naming --reportfile reports/messes.html --ignore-violations-on-exit",
            "vendor/bin/pdepend --summary-xml=reports/stats.xml \"src/\"",
            "vendor/bin/phploc --log-xml=reports/summary.xml src/",
            "vendor/bin/phpcpd src/ --log-pmd=reports/duplications.xml --min-lines=3 --min-tokens=35"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "ArtisanSdk\\Bench\\Providers\\Commands",
                "ArtisanSdk\\Bench\\Providers\\Configs"
            ]
        }
    }
}
